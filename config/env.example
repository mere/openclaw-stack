# Instance name (used for compose project/service naming)
INSTANCE=chloe

# Host ports (bound to loopback by default; use SSH tunnel)
NOVNC_HOST=127.0.0.1
NOVNC_PORT=6080

# OpenClaw bind-mount roots
OPENCLAW_STATE_DIR=/var/lib/openclaw/state
OPENCLAW_WORKSPACE_DIR=/var/lib/openclaw/workspace

# Browser persistent config root (bind mount)
BROWSER_CONFIG_DIR=/var/lib/openclaw/browser

# Browser CDP URL inside docker network
BROWSER_CDP_URL=http://browser:9222
