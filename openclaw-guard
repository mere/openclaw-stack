#!/usr/bin/env bash
set -euo pipefail
ENV_FILE=${ENV_FILE:-/etc/openclaw/stack.env}
if [ -f "$ENV_FILE" ]; then
  INSTANCE=$(grep -E '^INSTANCE=' "$ENV_FILE" 2>/dev/null | cut -d= -f2- | tr -d '"' | head -1)
fi
INSTANCE=${INSTANCE:-op-and-chloe}
docker exec -it "${INSTANCE}-openclaw-guard" ./openclaw.mjs "$@"
